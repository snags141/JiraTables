{
  "name": "Jira Tables",
  "version": "1.0",
  "description": "Make your markdown tables readable again!",
  "permissions": ["activeTab","tabs", "storage", "http://*.atlassian.net/*", "https://*.atlassian.net/*"],
  "content_scripts": [
    {
      "matches": ["http://*.atlassian.net/*", "https://*.atlassian.net/*"],
      "js": ["getContent.js"]
    }
  ],
  "options_page": "options.html",
  "background": {
    "matches": ["http://*.atlassian.net/*", "https://*.atlassian.net/*"],
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/JiraTableLogo_16.png",
      "32": "images/JiraTableLogo_32.png",
      "48": "images/JiraTableLogo_48.png",
      "128": "images/JiraTableLogo_128.png"
    }
  },
  "icons": {
    "16": "images/JiraTableLogo_16.png",
    "32": "images/JiraTableLogo_32.png",
    "48": "images/JiraTableLogo_48.png",
    "128": "images/JiraTableLogo_128.png"
  },
  "manifest_version": 2
}
